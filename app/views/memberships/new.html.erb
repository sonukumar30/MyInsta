
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header">Create New Membership</div>
        <div class="card-body">
        <%= form_with model: @membership, url: memberships_path do |form| %>
            <div class="form-group">
            <%= form.hidden_field :name, class: 'mt-2' %>
            </div>
            <%= form.hidden_field :user_id, value: current_user.id %>
            <div class="form-group">
            <%= form.label :group_id, "Select a group:" %>
            <%= form.select :group_id, options_from_collection_for_select(Group.all, :id, :name), {}, { class: 'form-control' } %>
            </div>
            <div class="form-group">
            <%= link_to "Back", groups_path, class:"button " %>
            <%= form.submit "Add User", class: "button" %>
            </div>
           
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
