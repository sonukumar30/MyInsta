<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Create New Group</div>
        <div class="card-body">
          <%= form_with model: @group, url: groups_path do |form| %>
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= form.label :community_id, "Select a community:" %>
              <%= form.select :community_id, options_from_collection_for_select(Community.all, :id, :name), {}, { class: 'form-control' } %>
            </div>
            <div class="form-group">
            <%= link_to 'Back', groups_path, class: "button" %>
              <%= form.submit class: "button" %>
             
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
