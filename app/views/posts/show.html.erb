<div class="d-flex justify-content-center align-items-center">
  <div>
          <h6>
          <%= @post.user.account.name %>
          </h6>
          <p>
          <strong>Title:</strong>
          <%= @post.title %>
          </p>

          <p>
          <strong>Description:</strong>
          <%= @post.description %>
          </p>

          <p>
          <strong>Keyword:</strong>
          <%= @post.keyword %>
          </p>

      
  </div>
</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @post.images.each_with_index do |image, index| %>
      <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
        <%= image_tag(image, style: "object-fit: cover; width: 100%; height: 600px;") %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



<br><br>


<div class="d-flex justify-content-center align-items-center">
  <div style="width:1000px">

          <h6><%= @post.likes.count %> Likes</h6>
          <% if !(current_user && @post.user == current_user) %>
          <%= render partial: 'likes/button', locals: {likeable: @post } %>
          <% end %>
          <br>
          <h4><%= @post.comments.count%> Comments</h4>
          <%= render @post.comments  %>
          <h3>Add a comment</h3>
          <%= render 'comments/form' %>




         <br>

          <table><tbody><tr>
          <td><%= link_to 'Back', posts_path,class:"button" %>      </td>
          <% if current_user && @post.user == current_user %>
          <td><%= link_to 'Edit Post', edit_post_path(@post) ,class:"button1"%></td>
          <td><%= button_to 'Destroy this post', @post, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-info nav-link" %></td>
          <% end %>
          </tr></tbody></table>
          

  </div>
</div>




