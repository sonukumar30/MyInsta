<div class="col-xl-4 col-md-6 col-sm-8 col-10" style="margin: auto;">
  <%= form_with(model: post) do |form| %>
    <h1>Create New Post</h1>

    <div class="field">
     <% invalid=post.errors.include?(:title)%>
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
      <% if invalid%>
      <%= post.errors.full_messages_for(:title).join(" , ")%>
      <%end%>
    </div>

    <div class="field">

      <%= form.text_field :user_id, type: "hidden", value: current_user.id %>
    
    </div>

    <div class="field">
     <% invalid=post.errors.include?(:description)%>
      <%= form.label :description %>
      <%= form.text_field :description, class: "form-control" %>
      <% if invalid%>
      <%= post.errors.full_messages_for(:description).join(" , ")%>
      <%end%>
    </div>

    <div class="field">
      <% invalid=post.errors.include?(:keyword)%>
      <%= form.label :keyword %>
      <%= form.text_field :keyword, class: "form-control"%>
      <% if invalid%>
      <%= post.errors.full_messages_for(:keyword).join(" , ")%>
      <%end%>
      <%= form.file_field:images,multiple:true%>
    </div>
  <br>
    <div class="actions">
    <table><tbody><tr>
    <%= link_to 'Back', posts_path ,class:"button"%> &nbsp; &nbsp; 
    <%= form.submit class:"button"%>
    </tr></tbody></table>
    </div>
  <% end %>
</div>