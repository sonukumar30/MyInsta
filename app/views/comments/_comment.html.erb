
<div class="container">
<hr>
    <div class="row">
        <div class="col-md-20">
            <div class="media g-mb-30 media-comment">
                <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                    <div class="g-mb-15">
                        
                        <h5 class="h5 g-color-gray-dark-v1 mb-0"><%= comment.user.account.try(:name) %></h5>
                        <span class="g-color-gray-dark-v4 g-font-size-12"><%= time_ago_in_words(comment.created_at) %> ago</span>
                    </div>
                    <br>
                    <h6><%= comment.body %></h6>
            
                    <ul class="list-inline d-sm-flex my-0">
                            <li class="list-inline-item g-mr-20">
                                <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" >
                                    <i class="fa fa-thumbs-up g-pos-rel g-top-1 g-mr-3"></i>
                                    <h6><%= comment.likes.count %> Likes</h6>
                                    <% if !(current_user && comment.user == current_user) %>
                                                    <%= render partial: 'likes/button', locals: {likeable: comment } %>  
                                    <% end %>                 
                                </a>
                            </li>

                          
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <% if current_user && comment.user == current_user %>
    <div class="text-right">
      
            <button class="btn btn-light">
           
                <%= button_to 'Delete this comment',[comment.post,comment],method: :delete, data:{confirm: 'are you sure'},class:"btn btn-info nav-link"%>
            </button>
    </div>
    <%end%>
    <hr>
</div>
